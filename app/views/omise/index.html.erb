<body>

  <%= render "shared/header" %>


    <nav class="pcnone" id="hidden">
        <ul class="nav_list">
          <li><img src="../images/icon_human.png" alt="ログイン">
            <p>登録</p>
          </li>
           <li><img src="../images/icon_human.png" alt="ログイン">
            <p>ログイン</p>
