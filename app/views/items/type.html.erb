 
<div class="contents row">
 <% @items.each do |item| %>
  <li class='list'>
    <%= link_to item_path(item.id) do %>
      <div class='item-img-content'>
        <%= image_tag item.images[0], class: 'item-img' if item.images.attached? %>
      </div>
      <div class='item-info'>
        <h3 class='item-name'>
          <%= item.item_name %>
        </h3>
        <h3 class='item-comment'>
          <%= item.comment %>
        </h3>
        <div class='item-price'>
          <span><%= item.fee %>円</span>
        </div>
        <div class='item-category'>
          <span>カゴリー（<%= item.category.name %>）</span>
        </div>
      </div>
    <% end %>
  </li>
<% end %> 